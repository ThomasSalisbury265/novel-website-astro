---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---
<header class="bg-white dark:bg-gray-900 flex">
	<div class="mx-auto flex h-16 max-w-screen-xl items-center gap-8 px-4 sm:px-6 lg:px-8 w-full">
	  <a class="block text-gray-800 dark:text-gray-800" href="/">
		<span><img class="max-w-14" src="/public/logo.webp" /></span>
	  </a>
  
	  <div class="flex flex-1 items-center justify-end md:justify-center">
		<nav aria-label="Global" class="hidden md:block">
		  <ul class="flex items-center gap-6 text-md">
			<li>
			  <a
				class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
				href="/about"
			  >
				About
			  </a>
			</li>
  
			<li>
			  <a
				class="text-gray-500 transition hover:text-gray-500/75 dark:text-white dark:hover:text-white/75"
				href="/blog"
			  >
				Blogs
			  </a>
			</li>
		  </ul>
		</nav>
	  </div>
	</div>
  </header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	nav a {
		padding: 1em 0.5em;
		color: var(--black);
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		border-bottom-color: var(--accent);
	}
	.social-links,
	.social-links a {
		display: flex;
	}
	@media (max-width: 720px) {
		.social-links {
			display: none;
		}
	}
</style>
